%meta{chatset: 'utf-8'}\
%meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}\
%meta{"http-equiv": 'X-UA-Compatible', content: 'IE=edge'}

.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      = link_to 'HOME', root_path, class: 'navbar-brand'
      %button.navbar-toggle{"data-target" => "#navbar-main", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

        %li
          = link_to 'NEW POST', posts_path, class: 'navbar-brand'
          %a{:href => "../help/"} Help
        %li
          %a{:href => "http://news.bootswatch.com"} Blog
        %li.dropdown
          %a#download.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            United
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "download"}
            %li
              %a{:href => "http://jsfiddle.net/bootswatch/cvLkpsx0/"} Open Sandbox
            %li.divider
            %li
              %a{:href => "./bootstrap.min.css"} bootstrap.min.css
            %li
              %a{:href => "./bootstrap.css"} bootstrap.css
            %li.divider
            %li
              %a{:href => "./variables.less"} variables.less
            %li
              %a{:href => "./bootswatch.less"} bootswatch.less
            %li.divider
            %li
              %a{:href => "./_variables.scss"} _variables.scss
            %li
              %a{:href => "./_bootswatch.scss"} _bootswatch.scss
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to 'NEW POST', controller: 'posts', action: 'new'
        %li
          %a{:href => "https://wrapbootstrap.com/?ref=bsw", :target => "_blank"} WrapBootstrap
        %li
          - if user_signed_in?
            = link_to "#{current_user.email} (Logout)", destroy_user_session_path, method: :delete
          - else
            = link_to 'Sign-in', new_user_session_path
